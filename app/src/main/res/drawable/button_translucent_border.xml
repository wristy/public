<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#BBFFFFFF"/> <!-- Translucent white when pressed -->
            <corners android:radius="4dp"/> <!-- Corner radius -->
            <stroke android:width="2dp" android:color="#4CAF50"/> <!-- Border color -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#50FFFFFF"/> <!-- 50% Translucent white -->
            <corners android:radius="4dp"/>
            <stroke android:width="2dp" android:color="#4CAF50"/>
        </shape>
    </item>
</selector>
